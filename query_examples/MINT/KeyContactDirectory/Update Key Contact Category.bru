meta {
  name: Update Key Contact Category
  type: graphql
  seq: 5
}

post {
  url: {{url}}
  body: graphql
  auth: apikey
}

auth:apikey {
  key: Authorization
  value: Local {"EUAID":"{{EUAID}}","jobCodes":{{jobCodes}},"favorLocalAuth":true}
  placement: header
}

body:graphql {
  mutation updateKeyContactCategory($id: UUID!, $changes: KeyContactCategoryUpdateChanges!) {
    updateKeyContactCategory(id: $id, changes: $changes) {
      id
      category
      createdBy
      createdByUserAccount {
        id
        username
        email
        commonName
      }
      createdDts
      modifiedBy
      modifiedByUserAccount {
        id
        username
        email
        commonName
      }
      modifiedDts
    }
  }
}

body:graphql:vars {
  {
    "id": "{{keyContactCategoryID}}",
    "changes": {
      "category": "Updated Technology & Innovation"
    }
  }
}

